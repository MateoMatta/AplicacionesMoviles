<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9000000"
    tools:context=".control.BurgerMenu">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/framelayout_l"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/user_tv_burger"
            android:layout_width="92dp"
            android:layout_height="0dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="64dp"
            android:fontFamily="@font/salsafamilyfont"
            android:text="User"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/settings_tv_burger"
            android:layout_width="91dp"
            android:layout_height="48dp"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="64dp"
            android:fontFamily="@font/salsafamilyfont"
            android:text="Ajustes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/questions_tv_burger"
            android:layout_width="213dp"
            android:layout_height="52dp"
            android:layout_marginTop="272dp"
            android:layout_marginEnd="96dp"
            android:fontFamily="@font/salsafamilyfont"
            android:text="Mis preguntas"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exit_tv_burger"
            android:layout_width="92dp"
            android:layout_height="0dp"
            android:layout_marginTop="508dp"
            android:layout_marginEnd="156dp"
            android:fontFamily="@font/salsafamilyfont"
            android:text="Salir"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/help_tv_burger"
            android:layout_width="92dp"
            android:layout_height="0dp"
            android:layout_marginTop="428dp"
            android:layout_marginEnd="156dp"
            android:fontFamily="@font/salsafamilyfont"
            android:text="Ayuda"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message_tv_burger"
            android:layout_width="208dp"
            android:layout_height="39dp"
            android:layout_marginTop="356dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/salsafamilyfont"
            android:text="Mensajes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton_back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:src="@android:drawable/ic_menu_revert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>