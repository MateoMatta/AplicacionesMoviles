<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseTopicsActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="0"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/ic_search_white" />

        <TextView
            android:id="@+id/buscar_edit_text"
            android:layout_width="260dp"
            android:layout_height="43dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:hint="Inicio"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#D5D5D5">
        </TextView>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/ic_menu_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#686767"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/txt__name2"
            android:layout_width="260dp"
            android:layout_height="43dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Nombre"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#D5D5D5"
            android:textSize="22sp"></TextView>

        <TextView
            android:id="@+id/txt__verification"
            android:layout_width="260dp"
            android:layout_height="43dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="VerificaciÃ³n"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#D5D5D5"
            android:textSize="22dp"></TextView>
    </LinearLayout>

    <ListView
        android:id = "@+id/listview_topics"
        android:layout_width="409dp"
        android:layout_height="589dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


</androidx.constraintlayout.widget.ConstraintLayout>